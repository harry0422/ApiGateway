@model IEnumerable<ApiGateway.Core.Contracts.Managers.RestServices.RestServiceDto>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HttpMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyFormat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HttpMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyFormat)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
